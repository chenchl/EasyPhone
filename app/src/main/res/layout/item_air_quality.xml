<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="weather"
            type="cn.chenchl.easyphone.weather.data.bean.CityWeather.Realtime" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:padding="@dimen/x20"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/x20"
            android:text="@{@string/air_quality(weather.aqi)}"
            android:textColor="@color/white"
            android:textSize="@dimen/x44"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/x20"
            android:text="@{@string/air_humidity(weather.humidity)}"
            android:textColor="@color/white"
            android:textSize="@dimen/x44"
            android:textStyle="bold" />


    </LinearLayout>
</layout>