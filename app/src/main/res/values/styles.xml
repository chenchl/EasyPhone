<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="WeatherActivity" parent="DefaultCityPickerTheme">
    </style>

    <style name="ToolBarTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/x80</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarTextAppearance1" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/x48</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- toolbar 菜单样式-->
    <style name="OverFlowMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:colorBackground">@android:color/white</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x30</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

</resources>
